@prefix : <http://snu.ac.kr/math/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -----------------------------------------------------------------------------
# Classes
# -----------------------------------------------------------------------------

:Subject a owl:Class ;
    rdfs:label "교과목"@ko ;
    rdfs:comment "고등학교 수학 교과목 (예: 수학I, 수학II, 미적분)" .

:Chapter a owl:Class ;
    rdfs:label "대단원"@ko ;
    rdfs:comment "교과목 하위의 대단원 (예: 다항식, 미분법)" .

:Section a owl:Class ;
    rdfs:label "중/소단원"@ko ;
    rdfs:comment "대단원 하위의 소단원 (예: 미분계수, 도함수)" .

:Concept a owl:Class ;
    rdfs:label "수학 개념"@ko ;
    rdfs:comment "학습해야 할 최소 단위의 개념 (예: 합성함수의 미분, 평균값 정리)" .

# -----------------------------------------------------------------------------
# Object Properties (Hierarchy)
# -----------------------------------------------------------------------------

:hasChapter a owl:ObjectProperty ;
    rdfs:domain :Subject ;
    rdfs:range :Chapter ;
    rdfs:label "단원 포함"@ko .

:hasSection a owl:ObjectProperty ;
    rdfs:domain :Chapter ;
    rdfs:range :Section ;
    rdfs:label "소단원 포함"@ko .

:hasConcept a owl:ObjectProperty ;
    rdfs:domain :Section ;
    rdfs:range :Concept ;
    rdfs:label "개념 포함"@ko .

# -----------------------------------------------------------------------------
# Object Properties (Relationships)
# -----------------------------------------------------------------------------

:prerequisiteOf a owl:ObjectProperty ;
    rdfs:domain :Concept ;
    rdfs:range :Concept ;
    rdfs:label "선수 학습 관계"@ko ;
    rdfs:comment "A prerequisiteOf B means A must be learned before B." .

:relatedTo a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:domain :Concept ;
    rdfs:range :Concept ;
    rdfs:label "연관 관계"@ko .
